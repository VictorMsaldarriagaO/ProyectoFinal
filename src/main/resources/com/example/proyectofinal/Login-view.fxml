<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:controller="Controller.LoginController"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/21"
          alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Text text="Inicio de Sesión" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Text>

    <Label text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Button text="Iniciar Sesión" onAction="#handleLoginButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.halignment="RIGHT"/>

    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"/>
        <ColumnConstraints minWidth="200" prefWidth="200"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="40"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
    </rowConstraints>
</GridPane>
