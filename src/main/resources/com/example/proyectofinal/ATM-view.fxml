<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainDashboard" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ATMController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="180.0" spacing="15.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
            </padding>
            <Label text="MENÚ BANCO" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <Button fx:id="cuentaBtn" maxWidth="1.7976931348623157E308" onAction="#showCuenta" text="Cuenta" />
            <Button fx:id="transferenciasBtn" maxWidth="1.7976931348623157E308" onAction="#showTransferencias" text="Transferencias" />
            <Button fx:id="prestamosBtn" maxWidth="1.7976931348623157E308" onAction="#showPrestamos" text="Préstamos" />
            <Button fx:id="deudaBtn" maxWidth="1.7976931348623157E308" onAction="#showDeuda" text="Deuda financiera" />
            <Button fx:id="movimientosBtn" maxWidth="1.7976931348623157E308" onAction="#showMovimientos" text="Movimientos recientes" />

            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>

            <Button fx:id="backToDashboardBtn" maxWidth="1.7976931348623157E308" onAction="#onBackToDashboardButtonClick" text="← Volver al Dashboard" style="-fx-background-color: #e74c3c; -fx-text-fill: white;">
                <VBox.margin>
                    <Insets top="40.0" />
                </VBox.margin>
            </Button>

        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label text="Bienvenido/a al Panel de Control del Banco" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
                        <Label text="Selecciona una opción del menú de la izquierda." style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
    <bottom>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="© 2025 ATM Services" BorderPane.alignment="CENTER" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="5.0" top="5.0" />
            </padding>
            <font>
                <Font size="10.0" />
            </font>
        </Label>
    </bottom>
</BorderPane>