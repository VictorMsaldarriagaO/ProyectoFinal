<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ATMController">
    <VBox alignment="TOP_CENTER" layoutX="100.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="50.0" left="100.0" right="100.0" top="50.0" />
        </padding>
        <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Gestión de Préstamos">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label fx:id="lblPrestamoActual" style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;" text="Préstamo actual: $10.000 (Pendiente: $2.000)" />
        <TextField fx:id="txtAbono" promptText="Ingrese el valor a abonar" style="-fx-font-size: 16px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" />
        <Button onAction="#handleAbono" prefWidth="200.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;" text="Realizar Abono" />
    </VBox>
</AnchorPane>