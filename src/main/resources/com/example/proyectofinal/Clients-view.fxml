<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.ViewClientsControler"
            prefHeight="500.0" prefWidth="800.0">
    <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="800.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="Listado de Clientes Registrados">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <TableView fx:id="clientTable" prefHeight="400.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nombre" />
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="Documento (ID)" />
                <TableColumn fx:id="ageColumn" prefWidth="80.0" text="Edad" />
                <TableColumn fx:id="mailColumn" prefWidth="180.0" text="Correo" />
                <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Teléfono" />
                <TableColumn fx:id="accountColumn" prefWidth="130.0" text="N° Cuenta" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Button text="Regresar al Dashboard" onAction="#onGoBackButtonClick"/>

    </VBox>
</AnchorPane>