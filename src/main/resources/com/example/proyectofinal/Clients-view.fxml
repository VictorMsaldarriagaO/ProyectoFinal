<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ViewClientsControler">
    <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="800.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label text="Listado de Clientes Registrados">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <VBox prefHeight="414.0" prefWidth="760.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <TableView fx:id="clientTable" prefHeight="298.0" prefWidth="730.0">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Nombre" />
                    <TableColumn fx:id="idColumn" prefWidth="117.60003662109375" text="Documento (ID)" />
                    <TableColumn fx:id="ageColumn" prefWidth="54.4000244140625" text="Edad" />
                    <TableColumn fx:id="mailColumn" prefWidth="84.79998779296875" text="Correo" />
                    <TableColumn fx:id="phoneColumn" prefWidth="153.59994506835938" text="Teléfono" />
                    <TableColumn fx:id="accountColumn" prefWidth="134.4000244140625" text="N° Cuenta" />
                </columns>
            </TableView>
            <Button onAction="#onGoBackButtonClick" text="Regresar al Dashboard" style="-fx-background-color:#e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;"/>
        </VBox>
    </VBox>
</AnchorPane>