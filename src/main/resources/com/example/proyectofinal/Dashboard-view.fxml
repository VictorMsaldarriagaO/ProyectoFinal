<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.DashboardController" prefHeight="600.0" prefWidth="800.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Panel de Control del Sistema Bancario" alignment="CENTER" >
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    <Label fx:id="welcomeText" text="Bienvenido. Seleccione una opción:"/>

    <Button text="Registrar Nuevo Cliente" onAction="#onRegisterClientButtonClick" prefWidth="250.0"/>
    <Button text="Ver Clientes/Cuentas" onAction="#onViewClientsButtonClick" prefWidth="250.0"/>
    <Button text="Gestión de Préstamos" onAction="#onLoanManagementButtonClick" prefWidth="250.0"/>
</VBox>